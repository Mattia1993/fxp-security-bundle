<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="sonatra_security.organizational_role.class">Sonatra\Component\Security\Organizational\OrganizationalRole</parameter>
    </parameters>

    <services>
        <!-- Organizational Role -->
        <service id="sonatra_security.organizational_role" class="%sonatra_security.organizational_role.class%">
            <argument type="service" id="sonatra_security.organizational_context"/>
            <argument type="service" id="sonatra_security.security_identity_manager"/>
            <argument type="service" id="security.token_storage"/>
        </service>
    </services>
</container>
