<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>

        <parameter key="sonatra_security.acl.orm.listener.class">Sonatra\Bundle\SecurityBundle\Doctrine\ORM\Listener\AclListenerContainerAware</parameter>

    </parameters>

    <services>

        <service id="sonatra_security.acl.orm.listener"
                 class="%sonatra_security.acl.orm.listener.class%"
                 public="false">
            <property name="container" type="service" id="service_container"/>
            <tag name="doctrine.event_subscriber" priority="1"/>
        </service>

    </services>

</container>
