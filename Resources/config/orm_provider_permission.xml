<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="sonatra_security.permission_provider.class">Sonatra\Component\Security\Doctrine\ORM\Provider\PermissionProvider</parameter>
    </parameters>

    <services>
        <!-- Doctrine ORM Permission Provider -->
        <service id="sonatra_security.permission_provider"
                 class="%sonatra_security.permission_provider.class%"
                 public="false">
            <argument type="expression">service('doctrine').getManagerForClass(parameter('sonatra_security.role_class')).getRepository(parameter('sonatra_security.role_class'))</argument>
            <argument type="expression">service('doctrine').getManagerForClass(parameter('sonatra_security.permission_class')).getRepository(parameter('sonatra_security.permission_class'))</argument>
            <argument>true</argument>
        </service>
    </services>
</container>
