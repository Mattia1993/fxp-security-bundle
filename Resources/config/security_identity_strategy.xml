<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="sonatra_security.security_identity_retrieval_strategy.class">Sonatra\Component\Security\Identity\CacheSecurityIdentityRetrievalStrategy</parameter>
    </parameters>

    <services>
        <!-- Security Identity Retrieval Strategy -->
        <service id="sonatra_security.security_identity_retrieval_strategy"
                 class="%sonatra_security.security_identity_retrieval_strategy.class%">
            <argument type="service" id="event_dispatcher"/>
            <argument type="service" id="security.role_hierarchy"/>
            <argument type="service" id="security.authentication.trust_resolver"/>
        </service>
    </services>

</container>
