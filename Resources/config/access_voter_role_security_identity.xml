<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>

        <parameter key="sonatra_security.access.role_security_identity_voter.class">Sonatra\Component\Security\Core\Authorization\Voter\RoleSecurityIdentityVoter</parameter>

    </parameters>

    <services>

        <!-- Override Symfony Role Hierarchy Voter -->
        <service id="security.access.role_hierarchy_voter"
                 class="%sonatra_security.access.role_security_identity_voter.class%" public="false">
            <argument type="service" id="security.acl.security_identity_retrieval_strategy"/>
            <tag name="security.voter" priority="245"/>
        </service>

    </services>

</container>
