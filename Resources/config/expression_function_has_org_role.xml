<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <!-- Has organization role expression language function -->
        <service id="sonatra_security.expression.functions.has_org_role" class="Sonatra\Component\Security\Authorization\Expression\HasOrgRoleProvider" public="false">
            <tag name="security.expression_language_provider" />
            <tag name="sonatra_security.expression_voter.variables" organizational_role="@sonatra_security.organizational_role" />
        </service>
    </services>
</container>
