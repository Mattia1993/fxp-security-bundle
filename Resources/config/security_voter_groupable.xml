<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="security.access.groupable_voter.class">Fxp\Component\Security\Authorization\Voter\GroupableVoter</parameter>
        <parameter key="fxp_security.subscriber.security_identity.group.class">Fxp\Component\Security\Listener\GroupSecurityIdentitySubscriber</parameter>
    </parameters>

    <services>
        <!-- Groupable Security Voter -->
        <service id="security.access.groupable_voter"
                 class="%security.access.groupable_voter.class%"
                 public="false">
            <tag name="security.voter" priority="245"/>
            <argument type="service" id="fxp_security.security_identity_manager"/>
        </service>

        <!-- Group Security Identity Subscriber -->
        <service id="fxp_security.subscriber.security_identity.group"
                 class="%fxp_security.subscriber.security_identity.group.class%">
            <tag name="fxp_security.event_subscriber"/>
        </service>
    </services>
</container>
