<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="security.access.groupable_voter.class">Sonatra\Component\Security\Authorization\Voter\GroupableVoter</parameter>
        <parameter key="sonatra_security.security_identity_retrieval_strategy.listener.group.class">Sonatra\Component\Security\Listener\GroupStrategyIdentitySubscriber</parameter>
    </parameters>

    <services>
        <!-- Groupable Security Voter -->
        <service id="security.access.groupable_voter"
                 class="%security.access.groupable_voter.class%"
                 public="false">
            <tag name="security.voter" priority="245"/>
            <argument type="service" id="sonatra_security.security_identity_retrieval_strategy"/>
        </service>

        <!-- Security Identity Strategy Group Listener -->
        <service id="sonatra_security.security_identity_retrieval_strategy.listener.group"
                 class="%sonatra_security.security_identity_retrieval_strategy.listener.group.class%">
            <tag name="sonatra_security.event_subscriber"/>
        </service>
    </services>
</container>
