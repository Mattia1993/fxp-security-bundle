<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>

        <parameter key="security.access.groupable_voter.class">Sonatra\Component\Security\Core\Authorization\Voter\GroupableVoter</parameter>
        <parameter key="security.acl.security_identity_retrieval_strategy.listener.group.class">Sonatra\Component\Security\Listener\GroupStrategyIdentitySubscriber</parameter>

    </parameters>

    <services>

        <service id="security.access.groupable_voter"
                 class="%security.access.groupable_voter.class%"
                 public="false">
            <argument type="service" id="security.acl.security_identity_retrieval_strategy"/>
            <tag name="security.voter" priority="245"/>
        </service>

        <service id="security.acl.security_identity_retrieval_strategy.listener.group"
                 class="%security.acl.security_identity_retrieval_strategy.listener.group.class%">
            <tag name="sonatra_security.event_subscriber"/>
        </service>

    </services>

</container>
