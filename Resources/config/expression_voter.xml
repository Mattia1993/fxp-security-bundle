<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="sonatra_security.object_filter.extension.class">Sonatra\Component\Security\ObjectFilter\ObjectFilterExtension</parameter>
        <parameter key="sonatra_security.object_filter.class">Sonatra\Component\Security\ObjectFilter\ObjectFilter</parameter>
    </parameters>

    <services>
        <!-- Override Security Access Expression Voter -->
        <service id="security.access.expression_voter" class="Sonatra\Component\Security\Authorization\Voter\ExpressionVoter" public="false">
            <argument type="service" id="security.expression_language" />
            <argument type="service" id="security.authentication.trust_resolver" />
            <argument type="service" id="sonatra_security.security_identity_retrieval_strategy" on-invalid="ignore" />
            <argument type="service" id="sonatra_security.organizational_context" on-invalid="ignore" />
            <tag name="security.voter" priority="245" />
        </service>
    </services>
</container>
