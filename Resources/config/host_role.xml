<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="fxp_security.authentication.provider.host_roles.class">Fxp\Component\Security\Authentication\Provider\HostRoleProvider</parameter>
        <parameter key="fxp_security.authentication.listener.host_roles.class">Fxp\Component\Security\Firewall\HostRoleListener</parameter>
    </parameters>

    <services>
        <!-- Authentication Provider -->
        <service id="fxp_security.authentication.provider.host_roles"
                 class="%fxp_security.authentication.provider.host_roles.class%">
            <argument type="collection"/>
        </service>

        <!-- Security Firewall -->
        <service id="fxp_security.authentication.listener.host_roles"
                 class="%fxp_security.authentication.listener.host_roles.class%">
            <argument type="service" id="fxp_security.security_identity_manager"/>
            <argument type="collection"/>
        </service>
    </services>
</container>
