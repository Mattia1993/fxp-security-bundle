<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>

        <parameter key="sonatra_security.host_role.authentication.provider.class">Sonatra\Component\Security\Authentication\Provider\HostRoleProvider</parameter>
        <parameter key="sonatra_security.host_role.authentication.listener.class">Sonatra\Component\Security\Firewall\HostRoleListener</parameter>

    </parameters>

    <services>

        <service id="sonatra_security.host_role.authentication.provider"
                 class="%sonatra_security.host_role.authentication.provider.class%">
            <argument type="collection"/>
        </service>

        <service id="sonatra_security.host_role.authentication.listener"
                 class="%sonatra_security.host_role.authentication.listener.class%">
            <argument type="service" id="security.token_storage"/>
            <argument type="collection"/>
            <argument type="service" id="security.authentication.listener.anonymous"/>
        </service>

    </services>

</container>
